.main
  - @items.each do |item|
    .main__item
      = link_to "/items/#{item.id}" do
        = image_tag item.image.url

      .main__item__user
        = item.user.nickname

      .main__item__comment
        = fa_icon "comment-o"
        0

      .main__item__heart
        = fa_icon "heart-o"
        0